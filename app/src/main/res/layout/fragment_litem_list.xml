<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItemImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tomato_cheese"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:src="@drawable/minus" />


        <TextView
            android:id="@+id/tvNoOfAddedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="1"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:src="@drawable/plus" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivLogbook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:src="@drawable/bag" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:text="Tomato Garlic Pizza"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/rbRating"
            android:layout_width="170sp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tvItemName"
            android:layout_height="50dp"
            android:numStars="5"
            android:rating="4"
            style="?android:attr/ratingBarStyleIndicator"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:stepSize=".5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/tvItemQuality"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tvItemName"
            android:layout_toRightOf="@+id/rbRating"
            android:layout_toEndOf="@+id/rbRating"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="With added cheasy cream" />





        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/image_arrow"/>

</RelativeLayout>
</LinearLayout>