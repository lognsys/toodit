<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItemImage"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/tomato_cheese"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:src="@drawable/minusw" />


        <TextView
            android:id="@+id/tvNoOfAddedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:src="@drawable/addw" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="Rs."
            />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/round_btn_red"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:id="@+id/ivAddTo_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:gravity="right"
            android:src="@drawable/bag" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/rb">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="Tomato Garlic Pizza"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/rbRating"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tvItemName"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:numStars="5"
            android:rating="4"
            style="?android:attr/ratingBarStyleIndicator"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:indeterminate="false"
            android:isIndicator="true"
            android:stepSize=".5"
            android:theme="@style/RatingBar"
             />

        <TextView
            android:id="@+id/tvItemQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:textSize="12sp"
            android:text="With added cheasy cream"
            android:layout_below="@+id/tvItemName"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/image_arrow"/>

    </RelativeLayout>



</LinearLayout>