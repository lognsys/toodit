<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:src="@drawable/tomato_cheese" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Tomato Garlic Pizza"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With added cheasy cream" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/rbRating"
                android:layout_width="250dip"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:numStars="5"
                android:rating="0"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:stepSize=".1"
                android:theme="@style/RatingBar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="25dip"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus" />


            <TextView
                android:id="@+id/tvNoOfAddedItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivLogbook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:src="@drawable/bag" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_marginTop="17dip"
                android:layout_marginLeft="20dip"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTheCentralGrill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Central Grill"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textSize="10sp"
                    android:text="Opposite City Mall, Road no. 3\r\n Delhi-301101" />
            </LinearLayout>
</LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/lvComment"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:divider="#FFFFFF"
            android:dividerHeight="25px" />
    </LinearLayout>

</ScrollView>